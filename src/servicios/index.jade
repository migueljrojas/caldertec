extends ../_layouts/base

include ../_modules/slider/slider

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.servicios
        section.servicios__hero
            h1.servicios__hero__title Nuestros servicios
            p.servicios__hero__desc Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt
        section.servicios__body
            .container
                each service in site.data.servicios
                    .row.servicios__item
                        .col-xs-24.col-sm-12
                            +slider('servicios__slider')
                                each img in service.fotos
                                    .servicios__slider__slide
                                        img(src=img)
                        .col-xs-24.col-sm-12
                            h2.servicios__name= service.name
                            p.servicios__desc= service.desc
