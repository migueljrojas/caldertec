extends _layouts/base

include _modules/slider/slider

block content
    main.home
        section.home__hero
            .container
                .row
                    .col-xs-24
                        +slider('home__hero__slider')
                            each slide in site.data.home.hero.slider
                                .home__hero__slider__slide
                                    img(src=slide.img)
        
        section.home__services
            h2.home__section-title= site.data.home.services.title
            .container
                .row
                    .col-xs-24
                        ul.home__services__list
                            each service in site.data.home.services.list
                                li
                                    h3.home__services__name= service.name
                                    p.home__services__desc= service.desc
                                    a(href=service.link.url)= service.link.text
        
        section.home__products
            h2.home__section-title= site.data.home.products.title
            .container
                .row
                    .col-xs-24
                        +slider('home__products__slider')
                            each product in site.data.home.products.list
                                .home__products__slide
                                    .home__products__image
                                        img(src=product.img)
                                    .home__products__data
                                        h3.home__products__name= product.name
                                        span.home__products__price= product.price
                                        p.home__products__desc= product.desc
                                        a._button Comprar
        
        section.home__clients
            h2.home__section-title= site.data.clientes.clientes.title
            div.container 
                ul.row 
                  each client, index in site.data.clientes.clientes.clients 
                    li.col-xs-12.col-sm-8.wow.fadeInUp(data-wow-delay="#{(index + 1)/8}s")
                        div.home__clients__img 
                            img(src=client.img)
                        h3.home__clients__name= client.name
        
        section.home__brands
            h2.home__section-title= site.data.brands.clientes.title
            div.container 
                ul.row 
                  each brand, index in site.data.brands.clientes.clients 
                    li.col-xs-12.col-sm-6.wow.fadeInUp(data-wow-delay="#{(index + 1)/8}s")
                        div.home__brands__img 
                            img(src=brand.img)
        
        section.home__contact
            h2.home__section-title= site.data.home.contact.title
            .container
                .row
                    .col-xs-24.col-sm-12
                        ._block
                            .embed-responsive.-map
                                iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62475.78173550588!2d-58.487677280905714!3d-34.61733866513783!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcca3b4ef90cbd%3A0xa0b3812e88e88e87!2sBuenos+Aires%2C+CABA!5e0!3m2!1ses!2sar!4v1472137314421", style="border:0", allowfullscreen)
                            
                        ._block
                            .row    
                                .col-xs-24.col-sm-12._data
                                    h4 Direcci√≥n
                                    dl
                                        dt
                                            i.fa.fa-map-marker
                                        dd  Calle 1234, Ushuaia
                                        
                                        dt
                                            i.fa.fa-phone
                                        dd  (123) 456-7890
                                        
                                        dt
                                            i.fa.fa-envelope
                                        dd  
                                            a(href="mailto:contacto@cincohermanos.com") contacto@cincohermanos.com
                                            
                                        
                                .col-xs-24.col-sm-12._horarios
                                    h4 Horarios
                                    dl
                                        dt
                                            i.fa.fa-clock-o
                                        dd  
                                            strong Lun - Vie
                                            span  10 a 19
                                        
                                        dt
                                            i.fa.fa-clock-o
                                        dd  
                                            strong Sab
                                            span  10 a 13
                                        
                                        dt
                                            i.fa.fa-clock-o
                                        dd  
                                            strong Dom
                                            span  Cerrado
                                        
                        
                    .col-xs-24.col-sm-12
                        ._block
                            h4 Escribinos tu consulta
                            form._form
                                input(placeholder="Nombre", type="text")
                                input(placeholder="Email",type="email")
                                label Mensaje
                                textarea(rows="7")
                                button.btn._submit(type="submit") Enviar
                                
            
            
