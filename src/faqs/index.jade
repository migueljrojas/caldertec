extends ../_layouts/base
include ../_modules/faq/faq

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.faqs
        section.faqs__hero
            h1.faqs__hero__title Preguntas Frecuentes
            p.faqs__hero__desc Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt
        section.faqs__body
            .container
                .row
                    .col-xs-24.col-sm-6
                        ul.faqs__categories
                            each cat in site.data.faq.categories
                                li= cat
                    .col-xs-24.col-sm-16.col-sm-offset-2
                        each item in site.data.faq.list
                            +faq(item)
